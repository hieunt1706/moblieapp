<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/dark"
        android:id="@+id/userInfoTB"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:fillViewport="true"

        android:background="@color/background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thay Đổi Thông Tin"
                android:textSize="25dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="#000"
                android:id="@+id/accountActivity_user_name"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bglayout"
                android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ tên"
                android:textColorHint="#FF787878"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quang Thiên"
                    android:id="@+id/userinfoName"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/useraccountscreen_ic_person_outline_black_24dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giới tính"
                android:layout_marginBottom="20dp"
                android:textColorHint="#FF787878"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nam"
                    android:id="@+id/userinfoGender"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/useraccountscreen_ic_tag_faces_black_24dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mô tả"
                android:layout_marginBottom="20dp"
                android:textColorHint="#FF787878"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mô tả"
                    android:id="@+id/userinfoDescript"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/useraccountscreen_ic_description_black_24dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại"
                android:layout_marginBottom="10dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="012345678"
                    android:id="@+id/userinfoPhone"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/useraccountscreen_ic_phone_android_black_24dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ"
                android:layout_marginBottom="20dp"
                android:textColorHint="#FF787878"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="012345678"
                    android:id="@+id/userinfoAddress"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/useraccountscreen_ic_location_on_black_24dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:background="@drawable/bg_btn"
                android:textColor="@color/colorPrimary"
                android:padding="0dp"
                android:id="@+id/ProfileUpdate"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>